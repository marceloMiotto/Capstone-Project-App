<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="531dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="udacitynano.com.br.cafelegal.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user_red_144" />

    <TextView
        android:id="@+id/detailsAdvogadoNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Nome Test" />

    <TextView
        android:id="@+id/detailsAdvogadoNumeroOAB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="OAB Test" />

    <TextView
        android:id="@+id/detailsAdvogadoEspecialidadeUm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Especialidade Um" />

    <TextView
        android:id="@+id/detailsAdvogadoEspecialidadeDois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Especialidade Dois" />


</LinearLayout>


