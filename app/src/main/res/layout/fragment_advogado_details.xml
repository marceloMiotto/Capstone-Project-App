<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_start_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/advogado_details_linear_margin"
        >

        <ImageView
            android:id="@+id/advogadoIconDetails"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:src="@drawable/user_red_144"
            />

        <GridLayout
            android:id="@+id/advogado_details_grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/advogado_details_margin"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="12"
            android:visibility="visible"
            tools:context="udacitynano.com.br.cafelegal.MainActivity">


            <!-- Labels Begin-->

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/advogado_details_label_nome"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Nome:" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="@string/advogado_details_label_numero_oab"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Número OAB:" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:text="@string/advogado_details_label_especialidades"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Especialidade(s):" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_rowSpan="2" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_rowSpan="2" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:text="@string/advogado_details_label_telefone"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Telefone:" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:text="@string/advogado_details_label_endereco"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Endereço:" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:text="@string/advogado_details_label_complemento"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Complemento:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="9"
                android:text="@string/advogado_details_label_bairro"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Bairro:" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="10"
                android:text="@string/advogado_details_cidade_estado"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Cidade:" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="11"
                android:text="@string/advogado_details_estado"
                android:textAppearance="?android:textAppearanceListItem"
                tools:text="Estado:" />

            <!-- Labels End-->

            <!-- Content -->
            <TextView
                android:id="@+id/detailsAdvogadoNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/advogado_details_label_nome"
                android:textAppearance="?android:textAppearanceLarge"
                tools:text="Marcelo" />

            <TextView
                android:id="@+id/detailsAdvogadoNumeroOAB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="@string/advogado_details_label_numero_oab"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="1234" />


            <TextView
                android:id="@+id/detailsAdvogadoEspaco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3" />

            <TextView
                android:id="@+id/detailsAdvogadoEspecialidadeUm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="@string/advogado_details_label_especialidades"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Comercial" />

            <TextView
                android:id="@+id/detailsAdvogadoEspecialidadeDois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:text="@string/advogado_details_label_especialidades"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Industrial" />

            <TextView
                android:id="@+id/detailsAdvogadoTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:text="@string/advogado_details_label_telefone"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="99999-9999" />


            <TextView
                android:id="@+id/detailsAdvogadoEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_row="7"
                android:text="@string/advogado_details_label_endereco"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Rua Marcilio Dias, nº 524" />

            <TextView
                android:id="@+id/detailsAdvogadoComplemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_row="8"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Ap 416" />

            <TextView
                android:id="@+id/detailsAdvogadoBairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="9"
                android:text="@string/advogado_details_label_bairro"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Menino Deus" />

            <TextView
                android:id="@+id/detailsAdvogadoCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="10"
                android:text="@string/advogado_details_cidade_estado"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Porto Alegre" />

            <TextView
                android:id="@+id/detailsAdvogadoEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="11"
                android:text="@string/advogado_details_estado"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Rio Grande do Sul" />


        </GridLayout>
    </LinearLayout>
</ScrollView>
